<div id="content_colors" class="content">
  <div class="list">
    <img class="screen-preview" id="screen" src="pic/screen.jpg" alt="TV screen">
  </div>
  <br>
  <div class="list">
    <input class="color-light" id="color" type="color" onchange="saveSettings()"/>
  </div>
  <br>
  led.brightness
  <div class="list">
    <input class="slider" id="brightness" type="range" min="1" max="100" onchange="saveSettings()">
  </div>
  <br>
  camera.contrast
  <div class="list">
    <input class="slider" id="contrast" type="range" min="-100" max="100" onchange="saveSettings()">
  </div>
  <br>
  camera.brightness
  <div class="list">
    <input class="slider" id="camera_brightness" type="range" min="-30" max="30" onchange="saveSettings()">
  </div>
  camera.exposure
  <div class="list">
    <input class="slider" id="exposure" type="range" min="-100" max="100" onchange="saveSettings()">
  </div>
  camera.saturation
  <div class="list">
    <input class="slider" id="saturation" type="range" min="0" max="100" onchange="saveSettings()">
  </div>
  camera.white
  <div class="list">
    <input class="slider" id="white" type="range" min="-1000" max="1000" onchange="saveSettings()">
  </div>
</div>
